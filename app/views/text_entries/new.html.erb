<div class="col-md-12">
	<h1>Create a Text Entry</h1>
	<form action="<%= text_entries_path %>" method="post">
		<div class="form-group col-md-5">
			<label for="title">Title:</label>
			<input type="text" name="title">
			<textarea class= "form-control" name="content" placeholder="Type some text in here."></textarea>

			<input type="hidden" name="source" value="text">
			<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
			<input class= "btn btn-default"type="submit" id="submit" value="Enter">
		</div>
	</form>
</div>

<div class="col-md-offset-2"><h4>OR</h4></div>

<div class="col-md-5">
	<h1>Enter a Tweet</h1>
	<form action="<%= text_entries_path %>" method="post">
		<div class="form-group">
			<label for="title">Title:</label>
			<input type="text" name="title">
			<input class= "form-control" type="text" name="url" placeholder="URL of tweet">

			<input type="hidden" name="source" value="twitter">
			<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
			<input class="btn btn-default" type="submit" id="submit" value="Enter">
		</div>
	</form>
</div>