
<div class="col-md-5">
	<h1>Edit this Entry</h1>
	<form action="<%=text_entry_path(@text_entry) %>" method="post">
		<label for="title">Title:</label>
		<input type="text" name="title" id="title" value="<%= @text_entry.title %>">
		<textarea name="content" rows="10" cols="40"><%= @text_entry.content %></textarea>
		<input type="hidden" name="source" value="<%= @text_entry.source %>">

		<input name="_method" type="hidden" value="put" />
		<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
		<input type="submit" id="submit">
	</form>
</div>